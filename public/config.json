{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "ref": "Config",
  "type": "object",
  "properties": {
    "model": {
      "type": "string",
      "description": "The AI model to use"
    },
    "planModel": {
      "type": "string",
      "description": "The AI model to use for planning (defaults to model if not specified)"
    },
    "language": {
      "type": "string",
      "description": "Language for responses",
      "default": "English"
    },
    "approvalMode": {
      "type": "string",
      "enum": ["default", "autoEdit", "yolo"],
      "description": "Approval mode for operations",
      "default": "default"
    },
    "plugins": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of plugins to load",
      "default": []
    },
    "mcpServers": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "stdio"
              },
              "command": {
                "type": "string",
                "description": "Command to run the MCP server"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Arguments for the MCP server command"
              },
              "env": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "Environment variables for the MCP server"
              },
              "disable": {
                "type": "boolean",
                "description": "Whether to disable this MCP server"
              }
            },
            "required": ["command", "args"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "sse"
              },
              "url": {
                "type": "string",
                "description": "URL for the SSE MCP server"
              },
              "disable": {
                "type": "boolean",
                "description": "Whether to disable this MCP server"
              }
            },
            "required": ["type", "url"],
            "additionalProperties": false
          }
        ]
      },
      "description": "MCP server configurations",
      "default": {}
    },
    "systemPrompt": {
      "type": "string",
      "description": "Custom system prompt"
    },
    "todo": {
      "type": "boolean",
      "description": "Enable todo functionality",
      "default": true
    },
    "autoCompact": {
      "type": "boolean",
      "description": "Controls whether automatic conversation compression is enabled. When set to false, conversation history will accumulate and context limit will be exceeded.",
      "default": true
    },
    "commit": {
      "type": "object",
      "properties": {
        "language": {
          "type": "string",
          "description": "Language for commit messages"
        }
      },
      "required": ["language"],
      "additionalProperties": false,
      "description": "Commit configuration"
    },
    "outputStyle": {
      "type": "string",
      "description": "Output style configuration"
    },
    "outputFormat": {
      "type": "string",
      "enum": ["text", "stream-json", "json"],
      "description": "Output format",
      "default": "text"
    },
    "autoUpdate": {
      "type": "boolean",
      "description": "Enable automatic updates",
      "default": true
    }
  },
  "additionalProperties": false
}
